{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "raycast-bitbucket-server",
  "title": "Bitbucket Server",
  "description": "Find Bitbucket repositories...",
  "icon": "icon.png",
  "author": "klassm",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Search Repository",
      "description": "Looks for a repository",
      "mode": "view"
    },
    {
      "name": "my-pull-requests",
      "title": "My Pull Requests",
      "description": "Looks for pull requests assigned to the current user.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "url",
      "type": "textfield",
      "title": "Bitbucket URL",
      "required": true,
      "default": "",
      "description": "URL to Bitbucket Server"
    },
    {
      "name": "user",
      "type": "textfield",
      "title": "Bitbucket User",
      "required": true,
      "default": "",
      "description": "Username"
    },
    {
      "name": "password",
      "type": "password",
      "title": "Bitbucket Password",
      "required": true,
      "default": "",
      "description": "Bitbucket password. You might need to create an app password from your personal Bitbucket settings."
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.70.3",
    "@raycast/utils": "^1.13.5",
    "lodash": "^4.17.21",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/lodash": "^4.17.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "typescript": "^5.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}
